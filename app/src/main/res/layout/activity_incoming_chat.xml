<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    tools:context="com.ecoach.cosapp.Activites.IncomingChat">

    <TextView
        android:id="@+id/textView12"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:padding="10dp"
        android:text="INCOMING CHAT"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:textStyle="bold" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/imageView7"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="15dp"
        android:src="@drawable/account_outline"
        android:layout_below="@+id/textView12"
        android:layout_centerHorizontal="true" />

    <info.hoang8f.widget.FButton
        android:id="@+id/rejectIncomingchat"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="Reject"
        android:textColor="@android:color/white"
        app:buttonColor="@android:color/holo_red_dark"
        app:cornerRadius="0dp"
        app:shadowEnabled="false"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/acceptChatButton"
        android:layout_marginBottom="42dp" />

    <info.hoang8f.widget.FButton
        android:id="@+id/acceptChatButton"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="Accept"
        android:textColor="@android:color/holo_green_dark"
        app:buttonColor="@android:color/white"
        app:cornerRadius="0dp"
        app:shadowEnabled="false"
        android:layout_above="@+id/rejectIncomingchat"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="32dp" />

    <TextView
        android:id="@+id/userfullname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:text="TextView"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:layout_below="@+id/imageView7"
        android:layout_alignParentStart="true"
        android:layout_marginTop="11dp" />

    <TextView
        android:id="@+id/customerphone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:text="TextView"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:layout_below="@+id/userfullname"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/customerEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/customerphone"
        android:padding="5dp"
        android:text="TextView"
        android:textAlignment="center"
        android:textColor="@color/white" />
</RelativeLayout>
