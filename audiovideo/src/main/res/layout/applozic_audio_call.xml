<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_black"
    android:fitsSystemWindows="true">


    <include layout="@layout/content_conversation" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:layout_gravity="top"
        android:background="@color/video_call_top_color"
        android:id="@+id/relativeLayout2">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="kfjhdfhhf hkj hfkdsahfkjhf hfjkhfk jsdhfkh "
            android:ellipsize="end"
            android:singleLine="true"
            android:id="@+id/contact_name"
            android:textColor="@color/white"
            android:fontFamily="sans-serif-condensed"
            android:textSize="25sp"
            android:padding="@dimen/fab_margin"
            android:layout_gravity="center_vertical"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="29dp"
            android:layout_toLeftOf="@+id/video_call_option_rl"
            android:layout_marginStart="29dp" />

    </RelativeLayout>
    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_height="250dp"
        android:layout_width="250dp"
        android:id="@+id/applozic_audio_profile_image"
        android:src="@drawable/applozic_ic_contact_picture_180_holo_light"
        android:layout_below="@+id/relativeLayout2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="42dp">
    </de.hdodenhof.circleimageview.CircleImageView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_gravity="bottom|end"
        android:background="@color/video_call_top_color"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">


        <android.support.design.widget.FloatingActionButton
            android:id="@+id/speaker_action_fab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:fabSize="mini"
            android:layout_centerVertical="true"
            android:layout_margin="@dimen/fab_margin"
            android:src="@drawable/ic_volume_down_white_24px"
            android:layout_alignParentLeft="true"
            />


        <android.support.design.widget.FloatingActionButton
            android:id="@+id/call_action_fab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_margin="@dimen/fab_margin"
            android:src="@drawable/ic_call_white_24px" />

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/mute_action_fab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:fabSize="mini"
            android:layout_centerVertical="true"
            android:layout_margin="@dimen/fab_margin"
            android:src="@drawable/ic_mic_green_24px"
            android:layout_alignParentRight="true"
            />

    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/applozic_audio_timer"
        android:textColor="@color/whitesmoke"
        android:fontFamily="sans-serif-condensed"
        android:textSize="20sp"
        android:paddingTop="@dimen/fab_margin"
        android:layout_below="@+id/applozic_audio_profile_image"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
